extends ../layout/index

block content
    div#bf-contents
        h2.hide 메인 리스트
        div.bf-list-wrap.clearfix
            section.detail-list
                h2.hide 리스트 상세정보
                article.gallery-list--detail
                    h3.hide Recent Posts
                    div.gallery-list--detail__list
                        each val in [{href:"/board/gallery/view",name:"전체",src:"/images/g1.jpg",title:"제목1",desc:"상세설명"}]
                            dl
                                dt.gallery-list--detail__title
                                    strong= val.title
                                dd.gallery-list--detail__info
                                    p
                                        img(src= val.src, alt= val.title)
                                    p.gallery-list--detail__desc= val.desc
            section.quick-list
                h2.hide 퀵 리스트
                article.gallery-list--popular
                    h3.gallery-list--popular__title Popular Posts
                    div.gallery-list--popular__list
                        each val in [{href:"/board/gallery/1/view",name:"전체",src:"/images/g1.jpg",title:"제목1"},{href:"/board/gallery/2/view",name:"자유",src:"/images/g2.jpg",title:"제목2"},{href:"/board/gallery/3/view",name:"갤러리",src:"/images/g3.jpg",title:"제목3"},{href:"/board/gallery/4/view",name:"자유",src:"/images/g2.jpg",title:"제목4"},{href:"/board/gallery/5/view",name:"갤러리",src:"/images/g3.jpg",title:"제목5"}]
                            a(href= val.href,title= val.name)
                                dl.clearfix
                                    dt
                                        strong= val.title
                                    dd
                                        p
                                            img(src= val.src, alt= val.title)
                article.quick-list--sns
                    h3.quick-list--sns__title SNS
                    div.quick-list--sns__detail
                article.quick-list--Category
                    h3.quick-list--Category__title Category
                    div.quick-list--Category__detail
                        ul
                            each val in [{href:"/board/gallery/1",title:"제목1",param:"1",reply:"1"},{href:"/board/gallery/2",title:"제목2",param:"2",reply:"2"},{href:"/board/gallery/3",title:"제목3",param:"3",reply:"3"}]
                                li.clearfix
                                    a(href= val.href, title= val.title)
                                        strong= val.title
                                        span (#{val.reply})
